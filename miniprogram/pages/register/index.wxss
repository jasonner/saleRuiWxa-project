/* pages/register/index.wxss */
.container{
    width: 100%;
    height: 100%;
}
.header-content{
    width: 100%;
}
.header-content image{
    width: 100%;
    height: 343rpx;
    object-fit: fill;
}
.login-title{
    width: 100%;
    text-align: center;
    height: 54rpx;
    line-height: 54rpx;
    margin-top: 100rpx;
    margin-bottom: 25rpx;
 }
.login-title image{
    width: 55rpx;
    height: 49rpx;
    vertical-align: middle;
    margin-right: 10rpx;
}
.login-title text{
    font-size: 37rpx;
    color: #5692ce;
}
.user-msg-form{
    width: 100%;
    height: auto;
    text-align: center;
    margin-top: 20rpx;
    position: relative;
  }
  .user-msg-form .user-msg{
    width: 78%;
    height: 76rpx;
    border-radius: 40rpx;
    margin: 0 auto;
    border: 1pt solid #5692ce;
    color: #5692ce;
    font-size: 28rpx;
    text-align: left;
    padding-left: 100rpx;
    box-sizing: border-box;
  }
  
  .user-msg-form .icon-user-input{
    width: 53rpx;
    height: 41rpx;
    position: absolute;
    left: 14vw;
    top: 20rpx;
  }
  .icon-user-select{
    width: 37rpx;
    height: 18rpx;
    position: absolute;
    right: 18vw;
    top: 2.5vh;
  }
  .login-btn-content{
    width: 100%;
    height: auto;
    text-align: center;
    margin-top: 47rpx;
  }
  .login-btn-content button:not([size='mini']){
    width: 78%;
    height: 80rpx;
    line-height: 80rpx;
    padding: 0;
    margin: 0 auto;
    text-align: center;
    display: block;
    background: #5692ce;
    color: #fff;
    border-radius: 40rpx;
    font-size: 30rpx;
  }
  .login-btn-content button[disabled]:not([type]){
    background: #5692ce;
    color: #fff;
  }
.clause-box{
  width: 100%;
  height: 25rpx;
  line-height: 25rpx;
  color: #999;
  font-size: 24rpx;
  margin-top: 26rpx;
  text-align: center;
}
.clause-box checkbox{
  vertical-align: middle;
}
.tip-box{
  width: 100%;
  height: auto;
  text-align: left;
  font-size: 18rpx;
  margin-left: 50rpx;
  margin-top: 120rpx;
  color: #999;
  margin-bottom: 35rpx;
}
.clause-box text{
  color: #5692ce;
  text-decoration:underline;
}