/**index.wxss**/
.index-page{
  width: 100%;
  height: 100%;
}
.header-content{
  width: 100%;
  height:auto;
}
.header-content image{
  width: 100%;
  height: 343rpx;
  object-fit: fill;
}
.login-title{
  width: 100%;
  text-align: center;
  height: 54rpx;
  line-height: 54rpx;
  margin-top: 180rpx;
}
.login-title image{
  width: 56rpx;
  height: 56rpx;
  vertical-align: middle;
  margin-right: 20rpx;
}
.login-title text{
  font-size: 37rpx;
  color: #5692ce;
}

.user-msg-form{
  width: 100%;
  height: auto;
  text-align: center;
  margin-top: 76rpx;
  position: relative;
}
.user-msg-form .user-msg{
  width: 78%;
  height: 76rpx;
  border-radius: 40rpx;
  margin: 0 auto;
  border: 1pt solid #5692ce;
  color: #5692ce;
  font-size: 28rpx;
  text-align: left;
  padding-left: 100rpx;
  box-sizing: border-box;
}

.user-msg-form .icon-user-input{
  width: 53rpx;
  height: 41rpx;
  position: absolute;
  left: 14vw;
  top: 20rpx;
}

.login-btn-content{
  width: 100%;
  height: auto;
  text-align: center;
  margin-top: 47rpx;
}
.login-btn-content button:not([size='mini']){
  width: 78%;
  height: 80rpx;
  line-height: 80rpx;
  padding: 0;
  margin: 0 auto;
  text-align: center;
  display: block;
  background: #5692ce;
  color: #fff;
  border-radius: 40rpx;
  font-size: 30rpx;
}
.login-btn-content button[disabled]:not([type]){
  background: #5692ce;
  color: #fff;
}
.footer-box{
  width: 100%;
  height: auto;
  margin-top: 200rpx;
  position: absolute;
  left: 0;
  bottom: 0;
}
.footer-box image{
  width: 100%;
  height: 114rpx;
  object-fit: fill;
}